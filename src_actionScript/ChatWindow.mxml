                       width="100%"
                       minWidth="0"
                       rowCount="10"
                       />
          
          <mx:ComboBox id="standingGraphicsStates"
                       tabIndex="2"
                       rowCount="10"
                       />
          
          <mx:Image id="secretTalkButton" source="{keyIcon}"
                    click="visibleSecretTalk()"
                    toolTip="秘話機能有効化"
                    />
          <mx:ComboBox id="sendtoBox"
                       toolTip="送信先：（全員）以外ならその相手にだけ送信されます"
