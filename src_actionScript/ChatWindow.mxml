        public function saveChatInfos():void {
            Log.logging("saveChatInfos initLoaded", initLoaded);
            
            if( ! initLoaded ) {
                Log.logging("initLoaded not finished. so END");
                return;
            }
            
            if( DodontoF_Main.getInstance().isReplayMode() ) {
