      static public function getCounterNameInfo(counterName:String):Object {
          Log.logging("getCounterNameInfo counterName", counterName);
          
          var text:String = counterName;
          text = text.replace(/＞/g, ">");
          text = text.replace(/＜/g, "<");
          text = text.replace(/？/g, "?");
          var changer:ZenkakuToHankaku = new ZenkakuToHankaku();
          text = changer.changeOnNumber(text);
          
          var result:Object = null;
          
          result = /^((-?\d+|\?)>)?([^\<\>]+)(>(-?\d+|\?))?$/.exec(text);
          Log.logging("result match1", result);
          if( result != null ) {
              return {"name": result[3],
                      "min" : result[5],
                      "max" : result[2]  };
          }
          
          result = /^((-?\d+|\?)<)?([^\<\>]+)(<(-?\d+|\?))?$/.exec(text);
          Log.logging("result match2", result);
          if( result != null ) {
              return {"name": result[3],
                      "min" : result[2],
                      "max" : result[5]  };
          }
          
          Log.logging("NOT match any paturn");
          return {"name" : counterName};
      }
      
      
      private function getCounterLimit(limitText:String, piece:InitiativedPiece, marker:String, defaultCount:int):int {
          
          if ( limitText == null ) {
              return defaultCount;
          }
          
          var limit:int = parseInt(limitText);
          if( limitText == "?" ) {
              if( ! piece.isCounterExist(marker) ) {
                  return defaultCount;
              }
              
              limit = piece.getCounter(marker);
          }
          
          return limit;
      }
      
