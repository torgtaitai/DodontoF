              }
          }
          
          initiativeInfoList.push(characterInfo);
          
          piece.setClickEvent( function():void{
                  selectTargetInfo(characterInfo);
              });
          
          Log.logging("addCharacter end");
      }
      
      private function getCounterValue(count:int, piece:InitiativedPiece, counterName:String):int {
          Log.logging("count", count);
          Log.logging("counterName", counterName);
          
          var info:Object = getCounterNameInfo(counterName);
          Log.logging("info", info);
          var name:String = info["name"];
          
          var min:int = getCounterLimit(info["min"], piece, (name + getMinValueMarker()), count);
          if( count < min ) {
              count = min;
          }
          
          var max:int = getCounterLimit(info["max"], piece, (name + getMaxValueMarker()), count);
          Log.logging("max", max);
          if( count > max ) {
              count = max;
          }
          Log.logging("changed count", count);
          
          return count;
      }
      
      static public function getMaxValueMarker():String {
